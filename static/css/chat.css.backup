/* ================================================================
   RAG DOCUMENT CHAT - NEXT GENERATION UI
   Document chat interface with modern design (adapted from Whisper)
   ================================================================ */

/* ========== Design System ========== */
:root {
    /* Glassmorphism Theme */
    --glass-bg: rgba(255, 255, 255, 0.7);
    --glass-border: rgba(255, 255, 255, 0.3);
    --glass-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.15);
    --glass-backdrop: blur(20px) saturate(180%);

    /* Aurora Gradient System - Steel Blue Theme */
    --aurora-1: linear-gradient(135deg, #4682b4 0%, #5a9bd4 100%);
    --aurora-2: linear-gradient(135deg, #e57373 0%, #ef5350 100%);
    --aurora-3: linear-gradient(135deg, #64b5f6 0%, #42a5f5 100%);
    --aurora-4: linear-gradient(135deg, #66bb6a 0%, #4caf50 100%);
    --aurora-5: linear-gradient(135deg, #ffb74d 0%, #ffa726 100%);

    /* Semantic Colors */
    --primary: #4682b4;
    --primary-light: #6fa3d4;
    --primary-dark: #2e6190;
    --secondary: #90a4ae;
    --accent: #ef5350;
    --success: #66bb6a;
    --warning: #ffb74d;
    --error: #e57373;
    --info: #64b5f6;

    /* Surface Colors */
    --surface-1: rgba(255, 255, 255, 0.95);
    --surface-2: rgba(255, 255, 255, 0.85);
    --surface-3: rgba(255, 255, 255, 0.75);
    --surface-overlay: rgba(0, 0, 0, 0.05);

    /* Text Colors */
    --text-1: #0f172a;
    --text-2: #475569;
    --text-3: #94a3b8;
    --text-inverse: #ffffff;

    /* Spacing Scale */
    --space-1: 3px;
    --space-2: 6px;
    --space-3: 9px;
    --space-4: 12px;
    --space-5: 18px;
    --space-6: 24px;
    --space-7: 36px;
    --space-8: 48px;

    /* Border Radius */
    --radius-sm: 8px;
    --radius-md: 12px;
    --radius-lg: 16px;
    --radius-xl: 20px;
    --radius-full: 9999px;

    /* Transitions */
    --ease-in-out-cubic: cubic-bezier(0.65, 0, 0.35, 1);
    --ease-out-expo: cubic-bezier(0.16, 1, 0.3, 1);
    --ease-spring: cubic-bezier(0.34, 1.56, 0.64, 1);

    /* Typography */
    --font-sans: 'Figtree', -apple-system, BlinkMacSystemFont, system-ui, sans-serif;
    --font-display: 'Raleway', var(--font-sans);
    --font-mono: 'SF Mono', 'Consolas', monospace;

    /* Z-index */
    --z-base: 1;
    --z-dropdown: 100;
    --z-sticky: 200;
    --z-fixed: 300;
    --z-modal-backdrop: 400;
    --z-modal: 500;
    --z-popover: 600;
    --z-toast: 700;
}

/* ========== Base Reset ========== */
*, *::before, *::after {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html {
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-rendering: optimizeLegibility;
}

html, body {
    width: 100%;
    height: 100%;
    overflow: hidden;
    position: fixed;
    overscroll-behavior: none;
}

body {
    font-family: var(--font-sans);
    font-size: 15px;
    line-height: 1.6;
    color: var(--text-1);
    background: linear-gradient(135deg, #eceff1 0%, #cfd8dc 100%);
    position: relative;
}

/* Animated Background */
body::before {
    content: '';
    position: fixed;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background:
        radial-gradient(circle at 20% 50%, rgba(70, 130, 180, 0.15) 0%, transparent 50%),
        radial-gradient(circle at 80% 80%, rgba(144, 164, 174, 0.15) 0%, transparent 50%),
        radial-gradient(circle at 40% 20%, rgba(100, 181, 246, 0.15) 0%, transparent 50%);
    animation: aurora 20s ease-in-out infinite;
    pointer-events: none;
    z-index: 0;
}

@keyframes aurora {
    0%, 100% { transform: translate(0, 0) rotate(0deg); }
    33% { transform: translate(30px, -50px) rotate(120deg); }
    66% { transform: translate(-20px, 20px) rotate(240deg); }
}

/* ========== App Container ========== */
.app-container {
    display: grid;
    grid-template-columns: 0fr 1fr;
    grid-template-areas: "sidebar main";
    height: 100vh;
    height: calc(var(--vh, 1vh) * 100);
    position: relative;
    gap: 0;
    padding: var(--space-4);
    transition: grid-template-columns 0.4s var(--ease-out-expo);
    overflow: hidden;
}

.app-container.sidebar-open {
    grid-template-columns: 320px 1fr;
    gap: var(--space-4);
}

/* ========== Sidebar - Floating Glass Card ========== */
.sidebar {
    grid-area: sidebar;
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-xl);
    backdrop-filter: var(--glass-backdrop);
    -webkit-backdrop-filter: var(--glass-backdrop);
    box-shadow: var(--glass-shadow);
    display: flex;
    flex-direction: column;
    overflow: hidden;
    transition: all 0.4s var(--ease-out-expo);
    width: 0;
    opacity: 0;
    visibility: hidden;
}

.sidebar-open .sidebar {
    width: 320px;
    opacity: 1;
    visibility: visible;
}

.sidebar.collapsed {
    width: 0;
    opacity: 0;
    visibility: hidden;
}

.sidebar-header {
    padding: var(--space-5);
    border-bottom: 1px solid var(--glass-border);
    display: flex;
    align-items: center;
    gap: var(--space-4);
}

.sidebar-header .sidebar-toggle {
    display: none;
}

.sidebar-toggle {
    width: 48px;
    height: 48px;
    border-radius: var(--radius-md);
    border: none;
    background: var(--surface-overlay);
    color: var(--text-1);
    font-size: 20px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s var(--ease-out-expo);
    position: relative;
    overflow: hidden;
}

.sidebar-toggle::before {
    content: '';
    position: absolute;
    inset: 0;
    background: var(--aurora-1);
    opacity: 0;
    transition: opacity 0.3s;
}

.sidebar-toggle:hover::before {
    opacity: 0.15;
}

.sidebar-toggle:hover {
    transform: scale(1.05);
}

.sidebar-title {
    font-family: var(--font-display);
    font-size: 24px;
    font-weight: 800;
    background: var(--aurora-1);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    letter-spacing: -0.03em;
}

.new-upload-btn {
    margin: var(--space-4);
    padding: var(--space-4);
    background: var(--aurora-1);
    border: none;
    border-radius: var(--radius-full);
    color: var(--text-inverse);
    font-weight: 700;
    font-size: 15px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-3);
    transition: all 0.4s var(--ease-out-expo);
    box-shadow: 0 4px 20px rgba(70, 130, 180, 0.3);
    position: relative;
    overflow: hidden;
}

.new-upload-btn::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, transparent 0%, rgba(255, 255, 255, 0.3) 100%);
    opacity: 0;
    transition: opacity 0.3s;
}

.new-upload-btn:hover::before {
    opacity: 1;
}

.new-upload-btn:hover {
    transform: translateY(-4px) scale(1.02);
    box-shadow: 0 8px 30px rgba(70, 130, 180, 0.4);
}

.search-box {
    margin: 0 var(--space-4) var(--space-4);
    padding: var(--space-4);
    background: var(--surface-overlay);
    border: 1px solid transparent;
    border-radius: var(--radius-full);
    display: flex;
    align-items: center;
    gap: var(--space-3);
    transition: all 0.3s var(--ease-out-expo);
}

.search-box:focus-within {
    background: var(--surface-1);
    border-color: var(--primary);
    box-shadow: 0 0 0 4px rgba(70, 130, 180, 0.1);
}

.search-box input {
    background: transparent;
    border: none;
    color: var(--text-1);
    font-size: 14px;
    outline: none;
    width: 100%;
    font-family: var(--font-sans);
}

.documents-list {
    flex: 1;
    overflow-y: auto;
    padding: 0 var(--space-2);
}

.document-item {
    margin: var(--space-2) 0;
    padding: var(--space-4);
    background: transparent;
    border-radius: var(--radius-md);
    cursor: pointer;
    transition: all 0.3s var(--ease-out-expo);
    position: relative;
    border: 1px solid transparent;
}

.document-item::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 4px;
    height: 0;
    background: var(--aurora-1);
    border-radius: 0 4px 4px 0;
    transition: height 0.3s var(--ease-out-expo);
}

.document-item:hover::before {
    height: 60%;
}

.document-item:hover {
    background: var(--surface-overlay);
    transform: translateX(8px);
}

.document-item.active {
    background: var(--surface-1);
    border-color: var(--glass-border);
}

.document-item.active::before {
    height: 80%;
}

.document-title {
    font-size: 14px;
    font-weight: 600;
    margin-bottom: var(--space-1);
    color: var(--text-1);
}

.document-status {
    font-size: 12px;
    display: inline-block;
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-full);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.document-status.ready {
    background: rgba(102, 187, 106, 0.15);
    color: #065f46;
}

.document-status.indexing {
    background: rgba(255, 183, 77, 0.15);
    color: #92400e;
}

.document-status.error {
    background: rgba(229, 115, 115, 0.15);
    color: #991b1b;
}

.sidebar-footer {
    padding: var(--space-4);
    border-top: 1px solid var(--glass-border);
}

.sidebar-user-btn {
    width: 100%;
    padding: var(--space-4);
    background: var(--surface-overlay);
    border: 1px solid transparent;
    border-radius: var(--radius-md);
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: var(--space-3);
    transition: all 0.3s var(--ease-out-expo);
    font-family: var(--font-sans);
}

.sidebar-user-btn:hover {
    background: var(--surface-1);
    border-color: var(--glass-border);
    transform: translateY(-2px);
}

.user-avatar {
    width: 44px;
    height: 44px;
    background: var(--aurora-1);
    border-radius: var(--radius-full);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 18px;
    font-weight: 800;
    color: var(--text-inverse);
    flex-shrink: 0;
    box-shadow: 0 4px 12px rgba(70, 130, 180, 0.3);
}

.user-info {
    flex: 1;
    min-width: 0;
}

.user-name {
    font-weight: 600;
    font-size: 14px;
    color: var(--text-1);
}

.settings-icon {
    font-size: 20px;
    color: var(--text-3);
    transition: all 0.6s var(--ease-out-expo);
}

.sidebar-user-btn:hover .settings-icon {
    color: var(--primary);
    transform: rotate(180deg) scale(1.1);
}

/* ========== Main Content Area ========== */
.main-content {
    grid-area: main;
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-xl);
    backdrop-filter: var(--glass-backdrop);
    -webkit-backdrop-filter: var(--glass-backdrop);
    box-shadow: var(--glass-shadow);
    display: grid;
    grid-template-rows: auto 1fr auto;
    grid-template-areas:
        "header"
        "chat"
        "input";
    overflow: hidden;
    position: relative;
}

.top-bar {
    grid-area: header;
    background: var(--glass-bg);
    border-bottom: 1px solid var(--glass-border);
    backdrop-filter: var(--glass-backdrop);
    -webkit-backdrop-filter: var(--glass-backdrop);
    padding: var(--space-4);
    display: flex;
    justify-content: space-between;
    align-items: center;
    z-index: var(--z-sticky);
}

.chat-area {
    grid-area: chat;
    overflow-y: auto;
    padding: var(--space-5);
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
}

/* ========== Messages - Bubble Style ========== */
.message {
    max-width: 75%;
    padding: var(--space-5);
    border-radius: var(--radius-lg);
    animation: messageIn 0.6s var(--ease-spring);
    position: relative;
    word-wrap: break-word;
    line-height: 1.6;
}

@keyframes messageIn {
    from {
        opacity: 0;
        transform: translateY(30px) scale(0.9);
    }
    to {
        opacity: 1;
        transform: translateY(0) scale(1);
    }
}

.message.user {
    align-self: flex-end;
    background: var(--aurora-1);
    color: var(--text-inverse);
    border-radius: var(--radius-lg) var(--radius-lg) 4px var(--radius-lg);
    box-shadow: 0 8px 24px rgba(70, 130, 180, 0.25);
}

.message.assistant {
    align-self: flex-start;
    background: var(--surface-1);
    color: var(--text-1);
    border-radius: var(--radius-lg) var(--radius-lg) var(--radius-lg) 4px;
    border: 1px solid var(--glass-border);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
}

.message.error {
    align-self: center;
    background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
    color: #991b1b;
    border-radius: var(--radius-lg);
    max-width: 90%;
}

/* Welcome Screen */
.welcome-screen {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    gap: var(--space-6);
    color: var(--text-3);
    text-align: center;
    padding: var(--space-8);
}

.welcome-screen h2 {
    font-family: var(--font-display);
    font-size: 48px;
    font-weight: 900;
    background: var(--aurora-1);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: var(--space-3);
}

.welcome-screen p {
    font-size: 18px;
    color: var(--text-2);
    max-width: 500px;
}

/* ========== Input Area ========== */
.input-area {
    grid-area: input;
    background: var(--glass-bg);
    border-top: 1px solid var(--glass-border);
    backdrop-filter: var(--glass-backdrop);
    -webkit-backdrop-filter: var(--glass-backdrop);
    padding: var(--space-5);
    display: flex;
    gap: var(--space-4);
}

.input-area input {
    flex: 1;
    padding: var(--space-4);
    border: 2px solid transparent;
    border-radius: var(--radius-full);
    font-size: 15px;
    font-family: var(--font-sans);
    background: var(--surface-overlay);
    color: var(--text-1);
    transition: all 0.3s var(--ease-out-expo);
}

.input-area input:focus {
    outline: none;
    border-color: var(--primary);
    background: var(--surface-1);
    box-shadow: 0 0 0 4px rgba(70, 130, 180, 0.1);
}

.input-area .btn {
    padding: var(--space-4) var(--space-6);
    border-radius: var(--radius-full);
    border: none;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s var(--ease-out-expo);
    font-family: var(--font-sans);
}

.input-area .btn-primary {
    background: var(--aurora-1);
    color: var(--text-inverse);
    box-shadow: 0 4px 16px rgba(70, 130, 180, 0.3);
}

.input-area .btn-primary:hover {
    transform: translateY(-2px) scale(1.02);
    box-shadow: 0 6px 20px rgba(70, 130, 180, 0.4);
}

/* ========== Modals - Enhanced ========== */
.modal-overlay {
    position: fixed;
    inset: 0;
    background: rgba(15, 23, 42, 0.5);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    display: none;
    align-items: center;
    justify-content: center;
    z-index: 400 !important;
    animation: fadeIn 0.4s var(--ease-out-expo);
}

@keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
}

.modal-overlay.active {
    display: flex;
}

.modal-content {
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-xl);
    backdrop-filter: var(--glass-backdrop);
    -webkit-backdrop-filter: var(--glass-backdrop);
    box-shadow: 0 24px 80px rgba(15, 23, 42, 0.3);
    width: 90%;
    max-width: 500px;
    padding: var(--space-8);
    animation: modalIn 0.6s var(--ease-spring);
    position: relative;
}

@keyframes modalIn {
    from {
        opacity: 0;
        transform: scale(0.9) translateY(40px);
    }
    to {
        opacity: 1;
        transform: scale(1) translateY(0);
    }
}

.modal-close {
    position: absolute;
    top: var(--space-5);
    right: var(--space-5);
    width: 40px;
    height: 40px;
    border-radius: var(--radius-full);
    border: none;
    background: var(--surface-overlay);
    font-size: 24px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s var(--ease-out-expo);
    color: var(--text-2);
}

.modal-close:hover {
    background: var(--error);
    color: var(--text-inverse);
    transform: rotate(90deg) scale(1.1);
}

.modal-title {
    font-family: var(--font-display);
    font-size: 28px;
    font-weight: 900;
    margin-bottom: var(--space-6);
    background: var(--aurora-1);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    letter-spacing: -0.03em;
}

.setting-group {
    margin-bottom: var(--space-5);
}

.setting-group label {
    display: block;
    font-size: 14px;
    font-weight: 700;
    color: var(--text-1);
    margin-bottom: var(--space-3);
}

.setting-group input,
.setting-group select {
    width: 100%;
    padding: var(--space-4);
    border: 2px solid transparent;
    border-radius: var(--radius-md);
    font-size: 15px;
    font-family: var(--font-sans);
    background: var(--surface-overlay);
    color: var(--text-1);
    transition: all 0.3s var(--ease-out-expo);
}

.setting-group input:focus,
.setting-group select:focus {
    outline: none;
    border-color: var(--primary);
    background: var(--surface-1);
    box-shadow: 0 0 0 4px rgba(70, 130, 180, 0.1);
}

.modal-actions {
    display: flex;
    gap: var(--space-3);
    margin-top: var(--space-6);
}

.modal-actions .btn {
    flex: 1;
    padding: var(--space-4);
    border-radius: var(--radius-full);
    border: none;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s var(--ease-out-expo);
    font-family: var(--font-sans);
}

.modal-actions .btn-primary {
    background: var(--aurora-1);
    color: var(--text-inverse);
    box-shadow: 0 4px 16px rgba(70, 130, 180, 0.3);
}

.modal-actions .btn-primary:hover {
    transform: translateY(-2px) scale(1.02);
    box-shadow: 0 6px 20px rgba(70, 130, 180, 0.4);
}

.modal-actions .btn-secondary {
    background: linear-gradient(135deg, #94a3b8 0%, #64748b 100%);
    color: var(--text-inverse);
}

/* ========== Toast ========== */
.toast-notification {
    position: fixed;
    bottom: -100px;
    left: 50%;
    transform: translateX(-50%);
    background: var(--glass-bg);
    backdrop-filter: var(--glass-backdrop);
    -webkit-backdrop-filter: var(--glass-backdrop);
    border: 1px solid var(--glass-border);
    color: var(--text-1);
    padding: var(--space-4) var(--space-6);
    border-radius: var(--radius-full);
    box-shadow: var(--glass-shadow);
    display: flex;
    align-items: center;
    gap: var(--space-3);
    z-index: var(--z-toast);
    transition: bottom 0.5s var(--ease-out-expo);
    font-weight: 600;
}

.toast-notification.show {
    bottom: var(--space-6);
}

.toast-notification.error {
    background: var(--aurora-2);
    color: var(--text-inverse);
}

.toast-notification.success {
    background: var(--aurora-4);
    color: var(--text-1);
}

/* ========== Custom Scrollbar ========== */
::-webkit-scrollbar {
    width: 12px;
    height: 12px;
}

::-webkit-scrollbar-track {
    background: transparent;
}

::-webkit-scrollbar-thumb {
    background: var(--aurora-1);
    border-radius: var(--radius-full);
    border: 3px solid transparent;
    background-clip: content-box;
}

::-webkit-scrollbar-thumb:hover {
    background: var(--primary-dark);
    background-clip: content-box;
}

/* ========== Mobile Overlay ========== */
.mobile-overlay {
    display: none;
    position: fixed;
    inset: 0;
    background: rgba(15, 23, 42, 0.5);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    z-index: calc(var(--z-fixed) - 1);
    opacity: 0;
    transition: opacity 0.4s var(--ease-out-expo);
}

.mobile-overlay.active {
    display: block;
    opacity: 1;
}

/* ========== Responsive Design ========== */
@media (max-width: 1024px) {
    /* Fix: Remove backdrop-filter on mobile to prevent sidebar blur */
    .mobile-overlay {
        backdrop-filter: none;
        -webkit-backdrop-filter: none;
        background: rgba(15, 23, 42, 0.75);
    }

    .app-container {
        grid-template-columns: 1fr !important;
        gap: var(--space-3) !important;
        padding: var(--space-3);
    }

    .app-container.sidebar-open {
        grid-template-columns: 1fr !important;
        gap: var(--space-3) !important;
    }

    .sidebar {
        position: fixed;
        top: var(--space-3);
        left: var(--space-3);
        bottom: var(--space-3);
        width: 340px;
        z-index: var(--z-fixed);
        transform: translateX(-110%);
        opacity: 1;
        visibility: visible;
    }

    .sidebar:not(.collapsed) {
        transform: translateX(0);
        width: 340px;
    }

    .sidebar-open .sidebar {
        transform: translateX(0);
        width: 340px;
    }

    .sidebar-header .sidebar-toggle {
        display: flex;
    }
}

@media (max-width: 640px) {
    .app-container {
        padding: var(--space-2);
    }

    .sidebar {
        width: calc(100% - var(--space-4));
        max-width: 320px;
    }

    .message {
        max-width: 90%;
        padding: var(--space-3);
    }

    .welcome-screen h2 {
        font-size: 32px;
    }

    .welcome-screen p {
        font-size: 16px;
    }
}

/* ========== Accessibility ========== */
@media (prefers-reduced-motion: reduce) {
    *, *::before, *::after {
        animation-duration: 0.01ms !important;
        animation-iteration-count: 1 !important;
        transition-duration: 0.01ms !important;
    }
}

:focus-visible {
    outline: 3px solid var(--primary);
    outline-offset: 3px;
    border-radius: var(--radius-sm);
}
